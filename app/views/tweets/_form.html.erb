<p id="notice"><%= notice %></p>

<%= form_for(@tweet, url: choose_new_or_edit) do |f| %>
    <% if @tweet.errors.any? %>
        <div id="error_explanation">
            <h2><%= @tweet.errors.count %>件のエラーがあります。</h2>

            <ul>
            <% @tweet.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
            </ul>
        </div>
    <% end %>

   
    <%= f.text_area :content, :placeholder => "いまなにしてる〜？", class: 'form-control' %>
    <%= f.submit "編集", class: 'btn btn-primary btn-block' %>
<% end %>

<%= link_to 'ホーム', root_path, class: 'btn btn-default btn-block' %>

